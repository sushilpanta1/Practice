pipeline{
    agent{
        label 'agent1'
    }
    environment{
        project= "Test"
    }
    stages{
        stage('Build'){
            steps{
                sh "sh script.sh" 
            }
        }
        stage('Notify'){
            steps{
                sh "echo this file runs successfully"
            }
        }
    }
    post{
        success{
            echo "success"
            sh "mail to business person"
        }
        failure{
            echo "failed"
            sh "mail to business person about failure"
        }
        always{
            deleteDir()
        }
    }
}